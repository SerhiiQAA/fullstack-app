{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Додайте це для виправлення помилки cors
    "resolveJsonModule": true,            // Потрібно для сучасних бібліотек
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "moduleDetection": "force",
    "verbatimModuleSyntax": false
  },
  "include": ["**/*.ts"]
}